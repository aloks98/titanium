{
  "name": "titanium",
  "version": "0.1.8",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "build:storybook": "pnpm -C packages/titanium-ui build:storybook",
    "build:docs": "pnpm -C apps/docs build",
    "build:lib": "pnpm -C packages/titanium-ui build",
    "check": "biome check --max-diagnostics 200 --write",
    "check:fix": "biome check --max-diagnostics 200 --fix --unsafe",
    "watch": "pnpm -C packages/titanium-ui watch",
    "format": "biome format --write",
    "storybook": "pnpm -C packages/titanium-ui storybook",
    "test": "vitest run",
    "dev": "pnpm -C apps/docs dev",
    "dev:docs": "pnpm -C apps/docs dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx,json,css}": "biome check --write",
    "packages/**/*.{js,ts,jsx,tsx,json,css}": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9",
    "wrangler": "^4.56.0"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
